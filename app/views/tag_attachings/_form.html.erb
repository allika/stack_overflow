<div class="fieldset">
  <p class="field">
    <%= f.select :tag_id, @tags.collect {|tag| [tag.name, tag.id]} %>
  </p>
  <p class="hidden-field">
    <%= f.text_field :comment_id, :value => comment_id, :hidden => 1 %>
  </p>
  <p class="hidden-field">
    <%= f.text_field :user_id, :value => current_user.id, :hidden => 1 %>
  </p>
</div>