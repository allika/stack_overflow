<% @page_title = "Create Tag" %>

<h1>Theme issue: <%= @theme.name %></h1>
<%= link_to "<< Themes", category_themes_path(:category_id => @theme.category_id), :class => 'back-link' %>
<h2>Comment content:</h2>
<p><%= @comment.body %></p>
<h2>Add Tag</h2>
<div class="tag new">
  <%= form_for @tag, :url => comment_tags_path(:comment_id => @comment.id), :html => {:method => :post} do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>

    <div class="form-buttons">
      <%= f.submit "Create Tag", :class => "button create" %>
    </div>
  <% end %>
</div>
