<% @page_title = "Sign in" %>

<h1>Sign in</h1>
<div class="session new">
  <%= form_for :session, url: sessions_path do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>

    <div class="form-buttons">
      <%= f.submit "Sign in", :class => "button create" %>
    </div>
  <% end %>
  <p>New user? <%= link_to "Sign up now!", signup_path %></p>
</div>

