<%= error_messages_for @user %>

<div class="fieldset">
  <p class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>

  <p class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>

  <p class="field">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>

  <p class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p class="field">
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </p>
</div>