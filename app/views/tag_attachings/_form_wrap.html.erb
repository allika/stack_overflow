<div class="tag_attaching create">
  <p>Attach a Tag:&nbsp;</p>

  <%= form_for :tag_attaching, :url => tag_attachings_path, :html => {:method => :post}, :remote => true do |f| %>
    <%= render :partial => 'tag_attachings/form', :locals => {:f => f, :comment_id => comment_id} %>

    <div class="form-buttons">
      <%= f.submit "Attach", :class => 'button create' %>
    </div>
  <% end %>
</div>
