<% @page_title = "Categories list" %>

<div class="category index">
<h1>Categories</h1>

  <% @categories.each do |category| %>
    <div class="category summary <%= cycle('odd', 'even') %>">
      <div class="statistics">
        <div class="themes"><%= pluralize category.themes.size, 'themes' %></div>
      </div>
      <div class="data">
        <h2> <%= link_to category.name, category_themes_path( category ), :class => "ahead-link" %> </h2>
      </div>
    </div>
    <div class="clear"></div>
  <% end %>
</div>