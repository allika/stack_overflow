<% @page_title = "Create Theme" %>

<h1>Category: <%= @category.name %></h1>

<%= link_to "<< All Themes", themes_path(:category_id => @theme.category_id), :class => 'back-link' %>

<div class="theme new">
  <h2>Add Theme</h2>

  <%= form_for setup_theme(@theme), :url => themes_path, :html => {:method => :post} do |f| %>
    <%= render :partial => 'form', :locals => {:f => f} %>

    <div class="form-buttons">
      <%= f.submit "Create Theme", :class => "button create" %>
    </div>
  <% end %>
</div>
